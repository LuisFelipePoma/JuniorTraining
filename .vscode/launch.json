{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "(lldb) Launch with file",
			"type": "cppdbg",
			"request": "launch",
			"program": "${fileDirname}/a.out",
			"args": [
				"<",
				"${fileDirname}/input.txt"
			],
			"stopAtEntry": false,
			"cwd": "${workspaceRoot}",
			"preLaunchTask": "build"
		},
		{
			"name": "(lldb) Launch without file",
			"type": "cppdbg",
			"request": "launch",
			"program": "${fileDirname}/a.out",
			"stopAtEntry": false,
			"cwd": "${workspaceRoot}",
			"preLaunchTask": "build"
		}
	]
}